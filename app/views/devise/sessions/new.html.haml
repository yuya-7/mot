= render 'posts/header'
.user
  ログイン
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .user_field
      = f.label :メールアドレス, class: "user_field_label"
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "user_field_form"
    .user_field
      = f.label :パスワード, class: "user_field_label"
      %br/
      = f.password_field :password, autocomplete: "current-password", class: "user_field_form"
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :ログイン情報を記録する
    .actions
      = f.submit "ログイン", class: "user_field_btn"
  = render 'devise/shared/links'
= render 'posts/footer'
